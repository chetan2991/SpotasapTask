<resources>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo"></style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.ListItem"></style>
    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="Widget.ListItem.ContainerStyle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="Widget.ListItem.ImageStyle">

        <item name="android:layout_width">?android:attr/listPreferredItemHeight</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeight</item>
        <item name="android:src">@drawable/navigation_background</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Widget.ListItem.TextContainerStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/generic_horizontal_margin</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.ListItem.TitleStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/generic_textview_list_item_title_color</item>
        <item name="android:textSize">@dimen/generic_large_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ListItem.PrimaryStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@drawable/primary_text_color_selector</item>
        <item name="android:textSize">@dimen/generic_medium_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ListItem.SecondaryStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/generic_textview_list_item_secondary_color</item>
        <item name="android:textSize">@dimen/generic_small_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.ListItem.ThirdStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/generic_textview_list_item_secondary_color</item>
        <item name="android:textSize">@dimen/generic_micro_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
